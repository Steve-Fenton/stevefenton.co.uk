---
import { sortByModDate } from '@util/PageTypeFilters';
import { getPages } from '@util/PageQueries';

// Logic
const allPages = await getPages();
const pageCount = allPages.length;
const pages = allPages.sort(sortByModDate).slice(0, Math.min(50, pageCount));
---
<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Oldest content</title>
    </head>
    <body>
        <h2>Report: Oldest content</h2>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Published</th>
                    <th>Modified</th>
                </tr>
            </thead>
        {pages.map(p => 
        <tr>
            <td><a href={ p.url }>{ p.frontmatter.title }</a></td>
            <td>{ p.frontmatter.pubDate }</td>
            <td>{ p.frontmatter.modDate }</td>
        </tr>
        )}
        </table>
    </body>
</html>