{
  "extends": "astro/tsconfigs/strict",
  "types": ["astro/client"],
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@config": ["src/config"],
        "@util/*": ["src/utilities/*"],
        "@plugin/*": ["src/plugins/*"],
        // Layouts and components for the theme
        "@layouts/*": ["src/themes/accelerator/layouts/*"],
        "@components/*": ["src/themes/accelerator/components/*"],
      }
  }
}